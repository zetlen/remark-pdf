{
  "name": "@jzetlen/remark-pdf",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.3.0",
  "description": "remark plugin to compile markdown to pdf.",
  "type": "module",
  "main": "lib/browser/index.js",
  "module": "lib/browser/index.mjs",
  "types": "lib/node/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "browser": "./lib/browser/index.js",
      "default": "./lib/node/node.js"
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build:node": "tsc",
    "build:browser": "rollup -c",
    "build": "npm run build:node && npm run build:browser",
    "test": "jest",
    "tsc": "tsc -p . --noEmit",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "typedoc": "typedoc",
    "prepublishOnly": "rimraf lib && npm run build"
  },
  "dependencies": {
    "@types/pdfmake": "^0.1.20",
    "github-slugger": "^2.0.0",
    "mdast-util-to-string": "^3.2.0",
    "pdfmake": "^0.2.4",
    "unist-util-visit": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@babel/preset-env": "7.15.6",
    "@babel/preset-typescript": "7.15.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "10.0.1",
    "@storybook/addon-essentials": "7.0.11",
    "@storybook/addon-links": "7.0.11",
    "@storybook/react": "7.0.11",
    "@storybook/react-webpack5": "^7.0.11",
    "@types/mdast": "^3.0.10",
    "@types/unist": "2.0.6",
    "babel-jest": "29.0.2",
    "file-saver": "^2.0.5",
    "highlight.js": "^11.8.0",
    "jest": "29.0.2",
    "jest-date-mock": "1.0.8",
    "lodash.debounce": "^4.0.8",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-is": "17.0.2",
    "react-simple-code-editor": "^0.13.1",
    "remark-footnotes": "4.0.1",
    "remark-frontmatter": "4.0.1",
    "remark-gfm": "3.0.1",
    "remark-math": "5.1.1",
    "remark-parse": "10.0.1",
    "rimraf": "3.0.2",
    "rollup": "2.63.0",
    "storybook": "^7.0.11",
    "tslib": "2.3.1",
    "typedoc": "0.24.7",
    "typedoc-plugin-markdown": "3.15.3",
    "typescript": "4.8.4",
    "unified": "10.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inokawa/remark-pdf.git"
  },
  "keywords": [
    "unist",
    "remark",
    "mdast",
    "markdown",
    "pdf"
  ],
  "author": "inokawa <stratoooo-taster@yahoo.co.jp> (https://github.com/inokawa/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inokawa/remark-pdf/issues"
  },
  "homepage": "https://github.com/inokawa/remark-pdf#readme"
}
