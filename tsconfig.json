{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES6",
    "lib": ["ES2021"],
    "outDir": "./lib/node",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
